<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/colorIndigoAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextNoBackground" parent="@android:style/Widget.EditText">
        <item name="android:padding">5dp</item>
        <item name="android:background">#0FFF</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="MainButton" parent="AppTheme.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="LightDialogNoActionBar" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RadioButtonCustom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/radio_button_custom</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HintSize" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemGrid">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_right_border</item>
    </style>

    <style name="HeaderItemGrid">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/top_right_border</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.BaseLabel">
        <item name="android:color">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.BaseText">
        <item name="android:color">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
</resources>
