<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_pick_put_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="NSX"/>
    <TextView
        android:id="@+id/tv_item_pick_put_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="HSD"/>


    <TextView
        android:id="@+id/tv_item_pick_put_pallet_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Tên"/>


    <TextView
        android:id="@+id/tv_item_pick_put_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Mã"/>


    <TextView
        android:id="@+id/tv_item_pick_put_carton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Kg"/>
    <TextView
        android:id="@+id/tv_item_barcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Barcode"/>
    <TextView
        android:id="@+id/tv_item_"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Pallet"/>


</LinearLayout>