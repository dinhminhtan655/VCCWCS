<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpContMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.wcs.vcc.main.containerandtruckinfor.SignUpContInOutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/header_pick_put_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_bottom"
            android:gravity="center_vertical"
            android:minHeight="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_target_scan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/barcode"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textCursorDrawable="@null">

                <requestFocus />
            </EditText>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#444" />

            <TextView
                android:id="@+id/tv_prev_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                tools:text="PI0000213012301" />

            <ImageView
                android:id="@+id/ivCameraScan"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/selector_gray_white"
                android:scaleType="center"
                android:src="@drawable/ic_action_image_camera_holo_light"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <ScrollView
            android:layout_below="@+id/header_pick_put_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_10dp">

                <TextView
                    android:id="@+id/tvTimeInOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvSpinCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableEnd="@drawable/arrow_down_24"
                    android:hint="* Chọn công ty"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:id="@+id/tvSpinVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableEnd="@drawable/arrow_down_24"
                    android:hint="* Chọn loại phương tiện"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtCarNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:completionThreshold="1"
                        android:hint="* Nhập biển số xe (VD:39Z12345)"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:maxLength="9"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtContainerNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:inputType="textCapCharacters"
                        android:hint="Nhập số Container"
                        android:imeOptions="actionNext"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtSealNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:completionThreshold="1"
                        android:hint="Nhập số Seal"
                        android:inputType="textCapCharacters"
                        android:imeOptions="actionNext"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtNameDriver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:completionThreshold="1"
                        android:hint="* Nhập tên tài xế"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtIDCardDriver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:completionThreshold="1"
                        android:ems="12"
                        android:hint="* Nhập Số CCCD"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtPhoneNumberDriver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:hint="* Nhập số điện thoại"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtEquipmentIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:drawable/editbox_background"
                    android:hint="Nhập tài sản mang vào (nếu có)"
                    android:imeOptions="actionDone"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tvGate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableEnd="@drawable/arrow_down_24"
                    android:hint="Cổng lấy hàng"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvGateReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableEnd="@drawable/arrow_down_24"
                    android:hint="* Lý do vào cổng"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtRemark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:imeOptions="actionDone"
                        android:padding="15dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:horizontalSpacing="5dp"
                    android:verticalSpacing="5dp" />

                <LinearLayout
                    android:id="@+id/lnTwoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btnCapture"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_action_image_camera_holo_light"
                        android:text="Đòng" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSignUp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/padding_10dp"
                        android:text="Khai Báo"
                        android:textColor="@color/white" />


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btnPrint"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/padding_10dp"
                        android:src="@drawable/ic_print"
                        android:text="Khai Báo"
                        android:textColor="@color/white"
                        android:visibility="gone" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnXoa"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/padding_10dp"
                        android:text="Xóa"
                        android:textColor="@color/white" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/lnTimeInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTimeIn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_10dp"
                    android:background="@color/colorGrayD"
                    android:text="Xe Vào"
                    android:enabled="true"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tvTimeIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:drawable/editbox_background"
                    android:hint="Chưa cập nhật"
                    android:layout_weight="3"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />


            </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnStartTimeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnStartTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_10dp"
                        android:text="Cắm Điện 1"
                        android:background="@color/colorGrayD"
                        android:enabled="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:hint="Chưa cập nhật"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnEndTimeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEndTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorGrayD"
                        android:padding="@dimen/padding_10dp"
                        android:text="Rút Điện 1"
                        android:enabled="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:hint="Chưa cập nhật"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnStartTime1Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnStartTime1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorGrayD"
                        android:padding="@dimen/padding_10dp"
                        android:text="Cắm Điện 2"
                        android:enabled="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvStartTime1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:hint="Chưa cập nhật"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnEndTime1Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEndTime1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorGrayD"
                        android:padding="@dimen/padding_10dp"
                        android:text="Rút Điện 2"
                        android:enabled="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvEndTime1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:hint="Chưa cập nhật"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnTimeOutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSignOut"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_10dp"
                        android:text="Xe ra"
                        android:background="@color/colorGrayD"
                        android:enabled="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvSignOut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:drawable/editbox_background"
                        android:hint="Chưa cập nhật"
                        android:layout_weight="3"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </LinearLayout>




            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>