<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_tv_stock_on_hand_CusName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_right_bottom_dark"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv_stock_on_hand_CusNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="#A00" />

        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalPallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="#000" />


        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalAfter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalCurrent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalExported"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textColor="#000"
            tools:text="Picked" />


        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalHold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Hold"
            android:textAlignment="center"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_tv_stock_on_hand_TotalPicked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            tools:text="Picked"
            android:textAlignment="center"
            android:textColor="#000" />




    </LinearLayout>
</LinearLayout>