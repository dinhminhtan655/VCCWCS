<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wcs.vcc.main.QLKhayRo.BasketRouteDetailActivity">

    <LinearLayout
        android:id="@+id/content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/edtPalletFrom"
            android:textSize="25sp"
            android:padding="8dp"
            android:hint="From"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/colorLightGray"
            android:textCursorDrawable="@null"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/edtPalletTo"
            android:textSize="25sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:hint="To
"
            android:textAlignment="center"
            android:background="@color/colorLightGray"
            android:textCursorDrawable="@null"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/btnTim"
            android:text="Tìm"
            android:background="@color/completed"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/content1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="Pallet Id"
            android:id="@+id/mPalletId"
            android:background="@color/colorDCDEE3"
            android:textStyle="bold"
            android:textColor="#E91E63" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="Route No"
            android:id="@+id/mTvRouteNo"
            android:textStyle="bold"
            android:textColor="#3F51B5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/content2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_target_scan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Barcode"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textCursorDrawable="@null" />
        <TextView
            android:id="@+id/tv_prev_barcode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textCursorDrawable="@null" />
        <ImageView
            android:id="@+id/ivCameraScan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_gray_white"
            android:scaleType="center"
            android:src="@drawable/ic_action_image_camera_holo_light"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content4"
        android:layout_below="@id/content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="Pallet"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="Hàng"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="Xác nhận"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="13sp"/>

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:text="Khay rổ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="13sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBasketRouteDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/content5"
        android:layout_below="@id/content4"
        tools:listitem="@layout/basket_route_detail_item" />

    <LinearLayout
        android:id="@+id/content5"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="Sum"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#005EFF"
            android:textSize="13sp"/>

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/sumHang"
            android:textColor="#FF0000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/sumXacNhan"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:textAlignment="center"
            android:textSize="13sp"/>

        <TextView
            android:padding="10dp"
            android:background="@color/text_selected"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/sumKhayRo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="13sp"/>
    </LinearLayout>

</RelativeLayout>