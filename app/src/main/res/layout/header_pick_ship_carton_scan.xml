<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="42dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_item_pick_ship_carton_scan_product_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Mã" />

    <TextView
        android:id="@+id/tv_item_pick_ship_carton_scan_product_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Tên" />

    <TextView
        android:id="@+id/tv_item_pick_ship_carton_scan_net_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="NetWeight" />

    <TextView
        android:id="@+id/tv_item_pick_ship_carton_scan_weight_per_package"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Weight/Package" />

    <TextView
        android:id="@+id/tv_item_pick_ship_carton_scan_production_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="NSX" />

    <TextView
        android:id="@+id/tv_item_pick_ship_carton_scan_lot_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Số lô" />



</LinearLayout>

