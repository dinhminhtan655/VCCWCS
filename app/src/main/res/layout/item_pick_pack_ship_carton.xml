<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.main.packingscan.carton.Carton" />

        <variable
            name="isBold"
            type="boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{String.valueOf(item.CartonNumber)}"
            app:isBold='@{isBold}'
            tools:text="CartonId" />

        <TextView
            android:id="@+id/item_tv_ppsc_package_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{item.PackageType}"
            app:isBold='@{isBold}'
            tools:text="PackageType" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textColor="#A00"
            android:textStyle="bold"
            android:text="@{String.valueOf(item.Quantity)}"
            app:isBold='@{isBold}'
            tools:text="Số gói" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textColor="#00F"
            android:textStyle="bold"
            android:text="@{String.valueOf(item.NetWeight)}"
            app:isBold='@{isBold}'
            tools:text="Số kí" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text='@{item.Completed ? "X" : ""}'
            app:isBold='@{isBold}'
            tools:text="X" />
    </LinearLayout>
</layout>