<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wcs.vcc.main.capdau.DistributionOrderViewActivity">

    <LinearLayout
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivArrowLeft"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/selector_gray_transparent"
            android:src="@drawable/ic_hardware_keyboard_arrow_left" />

        <Button
            android:id="@+id/btChooseDate"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_gray_transparent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:text="12-12-2018" />

        <ImageView
            android:id="@+id/ivArrowRight"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/selector_gray_transparent"
            android:src="@drawable/ic_hardware_keyboard_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_top"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/date_picker">

        <include layout="@layout/header_item_distribution_order" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_distribution"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view_shadow"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow" />
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>