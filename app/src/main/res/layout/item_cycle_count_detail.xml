<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_header_cycle_count_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/outline_right_bottom_dark"
        tools:text="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemTvTotalOriginalQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="OriginQty" />

        <TextView
            android:id="@+id/itemTvAfterQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="AfterQty" />



        <TextView
            android:id="@+id/itemTvCheckQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="CheckQty" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemLocationNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            tools:text="Location"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/itemTvPalletNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="PalletNum" />

        <TextView
            android:id="@+id/itemTvUseByDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_top_dark"
            android:gravity="center"
            tools:text="UseByDate"
            android:textColor="@color/black" />


    </LinearLayout>


</LinearLayout>