<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_update_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5dp"
            android:textColor="#A00"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/v_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/tv_product_update_header"
            android:background="@drawable/shadow"/>

        <Button
            android:id="@+id/bt_product_update_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/v_shadow"
            android:layout_margin="8dp"
            android:onClick="update"
            android:text="@string/update"/>

        <Button
            android:id="@+id/bt_product_update_update_kilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bt_product_update_update"
            android:layout_toLeftOf="@id/bt_product_update_update"
            android:onClick="updateKilo"
            android:text="Cập nhật\nsố ký"
            android:textColor="#8106df"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/bt_product_update_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bt_product_update_update"
            android:layout_marginRight="8dp"
            android:onClick="delete"
            android:text="Xóa"
            android:textColor="#F00"/>

        <Button
            android:id="@+id/bt_product_update_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bt_product_update_delete"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/bt_product_update_delete"
            android:onClick="add"
            android:text="Thêm mới"
            android:textColor="#00F"/>

        <LinearLayout
            android:id="@+id/ll_product_update_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_shadow"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/bt_product_update_update_kilo"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ký giao"
                app:hintTextAppearance="@style/HintSize">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_product_update_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textSize="18sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số thùng"
                app:hintTextAppearance="@style/HintSize">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_product_update_carton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textSize="18sp"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <com.wcs.vcc.main.bigc.MySpinner
            android:id="@+id/spinner_product_update_basket_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_product_update_order"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/view1"/>

        <TextView
            android:id="@id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/spinner_product_update_basket_list"
            android:layout_below="@id/ll_product_update_order"
            android:clickable="true"
            android:padding="4dp"
            android:text="Loại khay"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/label_basket_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/view1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/spinner_product_update_basket_list"
            android:text="S/lượng"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_update_product_basket_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/label_basket_quantity"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/label_basket_quantity"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="9"
            android:textSize="18sp"/>

        <RadioGroup
            android:id="@+id/rg_product_update_basket_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_product_update_basket_list"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_update_product_1"
                style="@style/RadioButtonCustom"
                android:tag="1"
                android:text="S13"/>

            <RadioButton
                android:id="@+id/rb_update_product_2"
                style="@style/RadioButtonCustom"
                android:tag="2"
                android:text="S25"/>


            <RadioButton
                android:id="@+id/rb_update_product_3"
                style="@style/RadioButtonCustom"
                android:tag="3"
                android:text="L13"/>

            <RadioButton
                android:id="@+id/rb_update_product_4"
                style="@style/RadioButtonCustom"
                android:tag="4"
                android:text="L25"/>

            <RadioButton
                android:id="@+id/rb_update_product_5"
                style="@style/RadioButtonCustom"
                android:tag="5"
                android:text="L40"/>

            <RadioButton
                android:id="@+id/rb_update_product_6"
                style="@style/RadioButtonCustom"
                android:tag="6"
                android:text="O25"/>

            <RadioButton
                android:id="@+id/rb_update_product_7"
                style="@style/RadioButtonCustom"
                android:tag="7"
                android:text="TROLLEY"/>
        </RadioGroup>


        <RadioGroup
            android:id="@+id/rg_product_update_basket_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg_product_update_basket_type"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_update_product_basket_quantity_1"
                style="@style/RadioButtonCustom"
                android:text="1"/>

            <RadioButton
                android:id="@+id/rb_update_product_basket_quantity_2"
                style="@style/RadioButtonCustom"
                android:text="2"/>

            <RadioButton
                android:id="@+id/rb_update_product_basket_quantity_3"
                style="@style/RadioButtonCustom"
                android:text="3"/>

            <RadioButton
                android:id="@+id/rb_update_product_basket_quantity_4"
                style="@style/RadioButtonCustom"
                android:text="4"/>

            <RadioButton
                android:id="@+id/rb_update_product_basket_quantity_5"
                style="@style/RadioButtonCustom"
                android:text="5"/>
        </RadioGroup>

    </RelativeLayout>

</ScrollView>