<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemTVShipToName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black_color_label"
        android:padding="@dimen/all_margin_5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        tools:text="ShipToName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemTvPallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/border_black_color_label"
            android:gravity="center"
            android:padding="@dimen/all_margin_5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="31" />

        <EditText
            android:id="@+id/itemEdtKhay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:padding="@dimen/all_margin_5dp"
            android:inputType="number"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:textColor="@color/black"
            tools:text="4" />


        <EditText
            android:id="@+id/itemEdtVi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:padding="@dimen/all_margin_5dp"
            android:inputType="number"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:textColor="@color/black"
            tools:text="31" />


    </LinearLayout>


</LinearLayout>

