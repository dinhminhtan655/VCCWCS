<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:background="@color/caldroid_gray"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBasketName"
            android:text="Tên khay rổ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sl Khay rổ giao:"
            android:id="@+id/tv1"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_1"
            android:layout_weight="1">

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnTru"
                android:text="-"
                android:layout_weight="0.2"/>

            <EditText
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtSLKhayRo"
                android:hint="Sl Khay rổ giao"
                android:textColor="@color/black"
                android:textAlignment="center"
               android:inputType="numberDecimal"
                android:textSize="20sp"
                android:layout_weight="0.6"/>

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCong"
                android:text="+"
                android:layout_weight="0.2"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sl Khay rổ nhận:"
            android:id="@+id/tv2"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_2"
            android:layout_weight="1">

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnTru1"
                android:text="-"
                android:layout_weight="0.2"/>

            <EditText
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtSLKhayRoReceived"
                android:textColor="@color/black"
                android:hint="Sl Khay rổ nhận"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:layout_weight="0.6"/>

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCong1"
                android:text="+"
                android:layout_weight="0.2"/>

        </LinearLayout>

<!--        <Button-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/btnUpdateKhayRo"-->
<!--            android:text="Cập nhật"-->
<!--            android:textSize="20sp"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="@color/white"-->
<!--            android:background="#2196F3"/>-->

    </LinearLayout>



</androidx.cardview.widget.CardView>