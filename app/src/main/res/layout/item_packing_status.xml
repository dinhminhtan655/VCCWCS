<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.api.xdoc.response.CheckStatusPickPackResponse" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:textColor="#A00"
                android:textStyle="bold"
                android:text="@{item.SHIP_TO_LOCATION}"
                tools:text="PVT" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:textStyle="bold"
                android:textColor="#00F"
                android:text="@{String.valueOf(item.StoreNumber)}"
                tools:text="125" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="@{String.valueOf(item.TotalPackages)}"
                tools:text="450" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:text="@{item.ProductNumber}"
                android:textColor="#00F"
                android:textStyle="bold"
                tools:text="00001" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="@{item.ProductName}"
                tools:text="Thịt ba rọi size(S)" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/outline_right_bottom_dark"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textColor="#A00"
                android:textStyle="bold"
                android:text="@{String.valueOf(item.QtyMiss)}"
                tools:text="0" />


        </LinearLayout>
    </LinearLayout>
</layout>