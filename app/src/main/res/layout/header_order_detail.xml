<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_pallet_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_PalletID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="1dp"
            android:text="Pallet"
            android:textAlignment="center"
            android:textColor="#00F" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="1dp"
            android:text="Lot 1"
            android:textAlignment="center"
            android:textColor="#A000" />

        <TextView
            android:id="@+id/tv_Quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="1dp"
            android:text="SL"
            android:textAlignment="center"
            android:textColor="#002aff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_QuantityCheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="1dp"
            android:textAlignment="center"
            android:textColor="#002aff"
            android:textStyle="bold"
            tools:text="9999" />


        <TextView
            android:id="@+id/tv_ScanQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="1dp"
            android:text="Scan"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_RemainByProductAtLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="1dp"
            android:text="Tồn"
            android:textAlignment="center"
            android:textColor="#ff8126"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ScanKg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="1dp"
            android:text="KG Scan"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_label"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:gravity="center"
                android:padding="1dp"
                android:text="Vị trí"
                android:textAlignment="center"
                android:textColor="#F0F"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:gravity="center"
                android:padding="1dp"
                android:text="Ghi Chú"
                android:textAlignment="center"
                android:textColor="#A000" />


            <TextView
                android:id="@+id/tv_ActualQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="1dp"
                android:textAlignment="center"
                android:textColor="#002aff"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="9999" />

            <TextView
                android:id="@+id/tv_nsx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@drawable/outline_right_bottom_dark"
                android:gravity="center"
                android:padding="1dp"
                android:text="NSX"
                android:textAlignment="center"
                android:textColor="#A000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hsd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="center"
                android:padding="1dp"
                android:text="HSD"
                android:textAlignment="center"
                android:textColor="#A000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>