<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_pick_put_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Phiếu"/>

    <TextView
        android:id="@+id/tv_item_pick_put_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="K.hàng"/>


    <TextView
        android:id="@+id/tv_item_pick_put_pallet_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Số xe"/>

    <TextView
        android:id="@+id/tv_item_pick_put_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Tài xế"/>
    <TextView
        android:id="@+id/tv_item_pick_put_DockInScannedBy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Scan vào"/>

    <TextView
        android:id="@+id/tv_item_pick_put_DockOutScannedBy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Scan ra"/>


    <TextView
        android:id="@+id/tv_item_pick_put_StartWorkingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Giờ vào"/>
    <TextView
        android:id="@+id/tv_item_pick_put_endWorkingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:text="Giờ ra"/>
</LinearLayout>