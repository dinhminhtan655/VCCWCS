<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="42dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_header_trip_delivery_detail_order_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Đơn hàng"/>


    <TextView
        android:id="@+id/tv_header_trip_delivery_detail_total_weight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Kg"/>


    <TextView
        android:id="@+id/tv_header_trip_delivery_detail_client_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Cửa Hàng"/>


    <TextView
        android:id="@+id/tv_header_trip_delivery_detail_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Status"/>


    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/outline_right_bottom_dark"/>
</LinearLayout>

