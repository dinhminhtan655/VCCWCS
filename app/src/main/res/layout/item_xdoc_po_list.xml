<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.main.scanvinmart.ItemPoInfor" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:textColor="#A00"
                android:textStyle="bold"
                android:text="@{item.StoreID}"
                tools:text="24" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:text="@{String.valueOf(item.Quantity)}"
                tools:text="30" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:text="@{String.valueOf(item.AcctualSortQuantity)}"
                tools:text="20" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:text="@{String.valueOf(item.PalletID)}"
                android:textColor="#00F"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="4dp"
                android:text="@{String.valueOf(item.Weight)}"
                tools:text="5" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/outline_right_bottom_dark"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@{String.valueOf(item.Status)}"
                tools:text="2" />


        </LinearLayout>
    </LinearLayout>
</layout>