<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.wcs.vcc.main.chuyenhang.ChuyenHangActivity"
        tools:showIn="@layout/activity_chuyen_hang">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_target_scan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/barcode"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textCursorDrawable="@null">

                <requestFocus/>
            </EditText>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#444"/>

            <TextView
                android:id="@+id/tv_prev_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textSize="17sp"
                tools:text="DO0000123456"/>

            <ImageView
                android:id="@+id/ivCameraScan"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="1dp"
                android:background="@drawable/selector_gray_white"
                android:scaleType="center"
                android:src="@drawable/ic_action_image_camera_holo_light"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDD"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/edt_chuyen_hang_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:hint="@string/from_location"
                android:imeOptions="actionDone"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_chuyen_hang_original_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_left"
                android:padding="5dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/bt_chuyen_hang_one_to_two"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="#EEE"
                android:text="@string/one_to_two"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameChuyenHangFrom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/outline_blue">

            <ListView
                android:id="@+id/listViewFrom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#DDD" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDD"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/acactv_chuyen_hang_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:completionThreshold="1"
                android:enabled="false"
                android:hint="@string/to_location"
                android:imeOptions="actionDone"
                android:padding="5dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnSwitch"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:background="@drawable/swap_calls" />

            <TextView
                android:id="@+id/tv_chuyen_hang_original_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_left"
                android:padding="5dp"
                android:textColor="#000" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameChuyenHangTo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/outline_blue">

            <ListView
                android:id="@+id/listViewTo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#DDD" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/acs_chuyen_hang_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_chuyen_hang_reverse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFF"
                android:text="@string/dao"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_chuyen_hang_move"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outlines_light"
                android:text="@string/chuyen" />

            <Button
                android:id="@+id/bt_chuyen_hang_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFF"
                android:text="@string/lich_su" />
        </LinearLayout>
    </LinearLayout>

</layout>