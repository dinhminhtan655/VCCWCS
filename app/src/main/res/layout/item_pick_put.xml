<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.main.vo.PickPut" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_pick_put_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@{item.productName}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Tên hàng" />

            <TextView
                android:id="@+id/tv_item_pick_put_carton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:text="@{item.customerNumber}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Mã KH" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_item_pick_put_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@{item.locationNumber}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Vị trí" />

            <TextView
                android:id="@+id/tv_item_order_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:text="@{item.orderNumber}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Số Order" />


            <TextView
                android:id="@+id/tv_item_pick_put_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:text="@{String.valueOf(item.palletNumber)}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Mã Pallet" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_pick_put_pallet_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:text="@{String.valueOf(item.cartons)}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="SL" />

            <TextView
                android:id="@+id/tv_item_remain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:text="@{String.valueOf(item.remain)}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Còn lại" />

            <TextView
                android:id="@+id/tv_item_pick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:text="@{String.valueOf(item.pickingQuantity)}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="pick" />

            <TextView
                android:id="@+id/tv_item_pick_put_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@{item.scannedBy}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Scan bởi" />


            <TextView
                android:id="@+id/tv_item_pick_put_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/outline_right_bottom_dark"
                android:padding="2dp"
                android:text="@{item.scannedTime}"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="Thời gian" />


        </LinearLayout>


    </LinearLayout>
</layout>