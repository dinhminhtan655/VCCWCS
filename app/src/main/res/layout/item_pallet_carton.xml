<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.main.palletcartonweighting.PalletCartonWeighting"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_pallet_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{String.valueOf(item.PalletCartonNumber)}"
            tools:text="CartonID"/>


        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{String.valueOf(item.CartonWeight)}"
            tools:text="Weight" />

        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_units"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{String.valueOf(item.CartonUnits)}"
            tools:text="Units"/>

        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_gross"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{String.valueOf(item.PalletGrossWeight)}"
            tools:text="Gross"/>

        <TextView
            android:id="@+id/tvIsRecordNew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:padding="4dp"
            android:text="@{String.valueOf(item.IsRecordNew)}"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{item.PalletRemark}"
            tools:text="Remark"/>
    </LinearLayout>
</layout>