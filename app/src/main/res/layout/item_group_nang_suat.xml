<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c6ddff"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_tv_performance_payrollDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_tv_performance_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="#D000"/>

    <TextView
        android:id="@+id/item_tv_performance_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:drawablePadding="5dp"
        android:text="Đêm"
        android:textColor="#A00"/>

    <TextView
        android:id="@+id/item_tv_performance_timeWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="#000"/>

</LinearLayout>