<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.main.capdau.TruckDriver" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="1500dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_distribution_order_truck_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:minHeight="32dp"
            android:padding="2dp"
            android:text="@{item.TruckNumber}"
            tools:text="Số xe" />

        <TextView
            android:id="@+id/tv_item_distribution_order_driver_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:minHeight="32dp"
            android:padding="2dp"
            android:text="@{item.DriverName}"
            tools:text="Tên TX" />

    </LinearLayout>
</layout>