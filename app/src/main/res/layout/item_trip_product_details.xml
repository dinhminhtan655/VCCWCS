<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.wcs.vcc.main.tripdelivery.productdetails.TripDeliveryProductDetails" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@{item.ProductNumber}"
            tools:text="Mã hàng" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:text="@{item.ProductName}"
            android:padding="5dp"
            tools:text="Tên hàng" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@{item.TotalPackages}"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="5dp"
            tools:text="SL" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="@{item.TotalWeight}"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="2dp"
            tools:text="Kí" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/outline_right_bottom_dark"
            android:text="@{item.CustomerRef}"
            android:gravity="center_vertical"
            android:padding="5dp"
            tools:text="Ghi chú" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@{item.DeliveryActual}"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="5dp"
            tools:text="Thực giao" />

        <CheckBox
            android:id="@+id/cb_detail_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>