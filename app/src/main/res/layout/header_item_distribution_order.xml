<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_distribution_order_truck_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="2dp"
        android:text="Số xe"/>

    <TextView
        android:id="@+id/tv_item_distribution_order_driver_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="2dp"
        android:text="Tên TX"/>

    <TextView
        android:id="@+id/tv_item_distribution_order_time_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="2dp"
        android:text="Vào"/>

    <TextView
        android:id="@+id/tv_item_distribution_order_kilometer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#00F"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="2dp"
        android:text="Km"/>

    <TextView
        android:id="@+id/tv_item_distribution_order_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textColor="#00F"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="2dp"
        android:text="Lít"/>
</LinearLayout>