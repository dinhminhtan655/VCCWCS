<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wcs.vcc.main.bigc.SuppliersTodayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_all_pre_day"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/selector_gray_white"
            android:contentDescription="@string/desc_previous_date"
            android:src="@drawable/ic_hardware_keyboard_arrow_left" />

        <Button
            android:id="@id/bt_all_choose_date"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#FFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/iv_all_next_date"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/selector_gray_white"
            android:contentDescription="@string/desc_next_date"
            android:src="@drawable/ic_hardware_keyboard_arrow_right" />

    </LinearLayout>

    <include
        layout="@layout/item_suppliers_today"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@id/lv_suppliers_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />

    </FrameLayout>
</LinearLayout>
