<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_header_pallet_carton_weighting_pallet_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="ID"/>

    <TextView
        android:id="@+id/tv_header_pallet_carton_weighting_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Net"/>



    <TextView
        android:id="@+id/tv_header_pallet_carton_weighting_gross"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Gross" />

    <TextView
        android:id="@+id/tv_header_pallet_carton_weighting_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Remark"/>

    <TextView
        android:id="@+id/tv_header_pallet_carton_weighting_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/outline_right_bottom_dark"
        android:padding="4dp"
        android:textColor="@color/caldroid_light_red"
        android:textSize="18sp"
        android:textAlignment="center"
        />
</LinearLayout>