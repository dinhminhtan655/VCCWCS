<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.api.checkouttrip.response.CartonStatus"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_trip_delivery_trip_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/caldroid_light_red"
            tools:text="DO-3232"
            android:text="@{item.DispatchingOrderNumber}" />


        <TextView
            android:id="@+id/tv_item_trip_delivery_route_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/caldroid_holo_blue_dark"
            tools:text="112"
            android:text="@{String.valueOf(item.CartonNumber)}" />

        <TextView
            android:id="@+id/tv_item_trip_delivery_qty_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="0"
            android:text="@{String.valueOf(item.Qty)}">

        </TextView>


        <TextView
            android:id="@+id/tv_item_trip_delivery_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/caldroid_light_red"
            tools:text="NG"
            android:text="@{item.Status}" />

    </LinearLayout>
</layout>