<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="42dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_pick_ship_detail_order_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Order" />

    <TextView
        android:id="@+id/tv_item_pick_ship_detail_customer_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Name" />


    <TextView
        android:id="@+id/tv_item_pick_ship_detail_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Description" />


    <TextView
        android:id="@+id/tv_item_pick_ship_detail_delivery_address"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Address" />


    <TextView
        android:id="@+id/tv_item_pick_ship_detail_total_packages"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="ThÃ¹ng" />


    <TextView
        android:id="@+id/tv_item_pick_ship_detail_total_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Kg" />

</LinearLayout>

