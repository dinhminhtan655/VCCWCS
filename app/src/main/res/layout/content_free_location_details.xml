<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_free_location_details">

    <include layout="@layout/header_free_location_detail" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lv_free_location_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFreeLocationRoomIDBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_right_bottom_dark"
            android:ems="2"
            android:layout_weight="0.5"
            android:text=""
            android:textColor="#A00" />

        <TextView
            android:id="@+id/tvFreeLocationAisle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:layout_weight="1"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationTotalBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_right_bottom_dark"
            android:ems="3"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvOffLocationTotalBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_right_bottom_dark"
            android:ems="3"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationFreeQtyBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:textColor="#1c64db" />

        <TextView
            android:id="@+id/tvFreeLocationPalletQtyBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:textColor="#1c64db"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationVLBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:textColor="#000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationLBot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:visibility="gone"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationVHBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:textColor="#000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationHBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:visibility="gone"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationBusyFBot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:text="0"
            android:textColor="#000" />


    </LinearLayout>
</LinearLayout>
