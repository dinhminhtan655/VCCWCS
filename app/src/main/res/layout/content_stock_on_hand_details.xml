<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wcs.vcc.main.tonkho.detailproduct.StockOnHandDetailsActivity"
    tools:showIn="@layout/activity_stock_on_hand_details">

    <TextView
        android:id="@+id/tv_productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:ellipsize="marquee"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_customerName"
        android:background="#000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/outline_right_bottom_dark">


                <TextView
                    android:id="@+id/tv_stock_on_hand_detail_ReceivingOrderID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RO"
                    android:textAlignment="center"
                    android:textColor="#A00" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark">

                <TextView
                    android:id="@+id/tv_stock_on_hand_detail_LocationNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Location"
                    android:textAlignment="center"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/outline_right_bottom_dark">

                <TextView
                    android:id="@+id/tv_stock_on_hand_detail_Status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Status"
                    android:textAlignment="center"
                    android:textColor="#000" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_ProductionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="NSX"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_UseByDater"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="HSD"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_ReceivingOrderDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="RODate"
                android:textAlignment="center"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_CustomerRef"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Ref"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_Remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Remark"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_TotalUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Unit"
                android:textAlignment="center"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_TotalAfter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Available"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_TotalCurrent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Qty"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_TotalExported"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Exported"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tv_stock_on_hand_detail_TotalHold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Hold"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_TotalPicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Picked"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_stock_on_hand_detail_TotalWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline_right_bottom_dark"
                android:text="Weight"
                android:textAlignment="center"
                android:textColor="#000" />



        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lvOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />
    </FrameLayout>
</LinearLayout>
