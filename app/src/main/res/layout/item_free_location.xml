<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFreeLocationRoomID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/outline_right_bottom_dark"
            android:ems="2"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:text="AB"
            android:textAlignment="center"
            android:textColor="#A00" />

        <TextView
            android:id="@+id/tvFreeLocationTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/outline_right_bottom_dark"
            android:ems="3"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Total"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationFreeQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Free"
            android:textColor="#1c64db" />

        <TextView
            android:id="@+id/tvFreeLocationOffQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Off"
            android:textColor="#1c64db" />


        <TextView
            android:id="@+id/tvFreeLocationPalletQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="PltQty"
            android:textColor="#1c64db"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationVL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="VL"
            android:textColor="#000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="L"
            android:textColor="#000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="VH"
            android:textColor="#000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="H"
            android:textColor="#000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationBusy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Busy"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationOccupancy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="10"
            android:textColor="#000" />

    </LinearLayout>


</LinearLayout>
