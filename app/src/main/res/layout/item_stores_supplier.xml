<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="38dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/item_stores_supplier_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center"
        android:text="Name"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/item_stores_supplier_booking_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center"
        android:text="Order"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/item_stores_supplier_actual_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center"
        android:text="Gross"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/item_stores_supplier_actual_carton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center"
        android:text="Ctns"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/item_stores_supplier_basket_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center"
        android:text="Basket"
        android:textColor="@android:color/black"/>

</LinearLayout>