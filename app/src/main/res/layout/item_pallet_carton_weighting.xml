<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.main.palletcartonweighting.PalletCartonWeighting" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_pallet_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{String.valueOf(item.PalletCartonNumber)}"
            tools:text="CartonID" />


        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:text="@{String.valueOf(item.CartonWeight)}"
            tools:text="Weight" />


        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_gross"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{String.valueOf(item.PalletGrossWeight)}"
            tools:text="Gross" />

        <TextView
            android:id="@+id/tv_item_pallet_carton_weighting_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@{item.PalletRemark}"
            tools:text="Remark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_item_pallet_carton_weighting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="@{item.isChecked}"

                />


        </LinearLayout>


    </LinearLayout>
</layout>