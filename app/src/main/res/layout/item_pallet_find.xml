    <TextView
        android:id="@+id/item_pallet_find_ro_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_pallet_find_ro_remark"
        android:layout_marginRight="16dp"
        android:text="Date: 2016-06-20"
        android:textColor="#000" />

    <TextView
        android:id="@+id/item_pallet_find_created_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_pallet_find_ro_remark"
        android:layout_toRightOf="@id/item_pallet_find_ro_date"
        android:text="Created: 2016-06-20"
        android:textColor="#000" />

    <TextView
        android:id="@+id/item_pallet_find_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_pallet_find_ro_date"
        android:text="xx1238190238"
        android:textColor="#000" />

    <TextView
        android:id="@+id/item_pallet_find_ro_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_pallet_find_customer_ref"
