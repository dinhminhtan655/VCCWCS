<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_order_detail">

    <EditText
        android:id="@+id/et_target_scan"
        android:layout_width="wrap_content"
        android:layout_height="1px">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/so_do_day"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:text="Sơ đồ dây" />

    <LinearLayout
        android:id="@+id/layoutbarcode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/barcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/corners_no_outline"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_weight="1"
            android:text="Xác Nhận"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutbarcode"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_iso"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_gray"
            android:gravity="center"
            android:text="ISO" />

        <Button
            android:id="@+id/worker"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_gray"
            android:gravity="center"
            android:text="Nhân viên" />

        <Button
            android:id="@+id/take_picture"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_gray"
            android:gravity="center"
            android:text="C.Hình" />

        <Button
            android:id="@+id/ivCameraScan"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_gray"
            android:gravity="center"
            android:text="S.Camera"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/print"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_gray"
            android:gravity="center"
            android:text="Print"
            />

        <Button
            android:id="@+id/scan_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Scan"
            android:visibility="gone" />
    </LinearLayout>

    <include
        android:id="@+id/header_order_detail"
        layout="@layout/header_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/outline_top"
        android:padding="5dp"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Tổng : " />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="#002aff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_totalChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="#002aff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_scanned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="#0a0"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@id/header_order_detail"
        android:orientation="vertical">


        <ListView
            android:id="@+id/lv_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_detail_phieu" />


    </LinearLayout>


</RelativeLayout>
