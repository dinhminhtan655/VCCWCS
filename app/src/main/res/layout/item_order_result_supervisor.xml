<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.main.gskscan.OrderResultsSupervisorScan"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tv_item_pick_put_location"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Phiếu: ` + item.OrderNumber}"/>

        <TextView
            android:id="@+id/tv_item_pick_put_order"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`K.hàng: ` + item.CustomerNumber}"/>

        <TextView
            android:id="@+id/tv_item_pick_put_pallet_id"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Số xe: ` + item.VehicleNumber}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_pick_put_DockInScannedBy"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{`Scan vào: ` + item.DockInScannedBy}"/>

            <TextView
                android:id="@+id/tv_item_pick_put_DockOutScannedBy"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{`Scan ra: ` + item.DockOutScannedBy}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_pick_put_StartWorkingTime"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{`Giờ vào: ` + item.StartWorkingTime}"/>

            <TextView
                android:id="@+id/tv_item_pick_put_endWorkingTime"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{`Giờ ra: ` + item.EndWorkingTime}"/>

        </LinearLayout>
    </LinearLayout>
</layout>