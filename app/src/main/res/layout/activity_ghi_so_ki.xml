<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wcs.vcc.main.soki.GhiSoKiActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivArrowLeft"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/selector_gray_transparent"
                            android:src="@drawable/ic_hardware_keyboard_arrow_left" />

                        <Button
                            android:id="@+id/btChooseDate"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_gray_transparent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#FFF" />

                        <ImageView
                            android:id="@+id/ivArrowRight"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/selector_gray_transparent"
                            android:src="@drawable/ic_hardware_keyboard_arrow_right" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="KHID:"
            android:layout_weight="0.7"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinCustomerID"
            android:layout_weight="2.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SPID:"
            android:layout_weight="1.2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinProductID"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="2.8"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NSX:"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edtNgayThangNam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ngày tháng năm"
            android:inputType="date"
            android:imeOptions="actionDone"
            android:layout_weight="1.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HSD:"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edtHSD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Ngày tháng năm"
            android:layout_weight="1.5"
            android:inputType="date"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kg"
                android:layout_weight="0.5"
                android:imeOptions="actionNext"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edtSoKg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Số kí"
                android:maxLength="2"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:layout_weight="1.5"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edtSoKg2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Số kí"
                android:maxLength="3"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_weight="1.5"/>

        </LinearLayout>



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lot/Ref:"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edtLotRef"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Lot/Ref"
            android:imeOptions="actionDone"
            android:layout_weight="1.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Vị trí"
                android:layout_weight="0.5"
                android:imeOptions="actionNext"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edtLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Vị trí"
                android:maxLength="6"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:layout_weight="1.5"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="RO"
                android:layout_weight="0.5"
                android:imeOptions="actionNext"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinRO"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ADD"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"/>


        <Button
            android:id="@+id/btnInTem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="In Tem"/>


        <Button
            android:id="@+id/btnTaoRO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tạo RO"/>

    </LinearLayout>


    <include
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        layout="@layout/header_so_ki"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGhiSoKi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lnTotal"
            android:layout_marginBottom="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_ghi_so_ki" />


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />


        <LinearLayout
            android:id="@+id/lnTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTong"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/outline_right_bottom"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/outline_right_bottom"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvTongSoKg"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/outline_right_bottom"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/outline_right_bottom"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>