<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.wcs.vcc.main.newscanmasan.itemmasan.XdocPackingScanByLotActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:id="@+id/palletFromTo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/outline_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPalletFrom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="From"
                android:text="1"
                android:textStyle="bold"
                android:textSize="35dp"
                android:maxLength="10"
                android:textAlignment="center"
                android:background="@color/colorLightGray"
                android:textCursorDrawable="@null">
                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etPalletTo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="To"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:inputType="number"
                android:text="100"
                android:textSize="35dp"
                android:textAlignment="center"
                android:maxLength="10"
                android:background="@color/colorLightGray"
                android:textStyle="bold"
                android:textCursorDrawable="@null">
                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etGroupSorting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Nhom"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:inputType="number"
                android:text="1"
                android:textSize="35dp"
                android:textAlignment="center"
                android:maxLength="10"
                android:background="@color/colorAlternativeRow"
                android:textStyle="bold"
                android:textCursorDrawable="@null">
                <requestFocus />
            </EditText>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onChange"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@color/colorIndigoAccent"
                android:text="Đảo" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onXong"
                android:textStyle="bold"
                android:background="@color/completed"
                android:text="Tìm" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/outline_bottom_dark"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/outline_bottom_dark"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvPalletNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorDCDEE3"
                    android:text="PRINT"
                    android:textAlignment="center"
                    android:textColor="#E91E63"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/outline_bottom_dark"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bigcLightGreen"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyTypeScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSaveCarton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="onChangeType"
                android:textSize="20dp"
                android:background="@color/completed"
                android:textStyle="bold"
                android:text="+1" />
            <Button
                android:id="@+id/btnPrintLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Tem" />
            <TextView
                android:id="@+id/tvItemInfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3F51B5"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:gravity="center"
                android:text="--------"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/header_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_target_scan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/barcode"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textCursorDrawable="@null">
                <requestFocus />
            </EditText>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#444" />

            <TextView
                android:id="@+id/tv_prev_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="17sp"
                tools:text="DO0000123456" />

            <ImageView
                android:id="@+id/ivCameraScan"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="1dp"
                android:background="@drawable/selector_gray_white"
                android:scaleType="center"
                android:src="@drawable/ic_action_image_camera_holo_light"
                tools:ignore="ContentDescription" />
        </LinearLayout>


        <include
            android:id="@+id/headerScanMasan"
            layout="@layout/header_scan_masan" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvScanMasan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/lnTotalMasan"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_picking_list_masan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow" />


            <LinearLayout
                android:id="@+id/lnTotalMasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <TextView
                    android:text="@string/total"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/outline_right_bottom"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvSumSLOrder"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/outline_right_bottom"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvSumTLOrder"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/outline_right_bottom"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvSumSLScan"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/outline_right_bottom"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvSumTLScan"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/outline_right_bottom"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>


            </LinearLayout>

        </RelativeLayout>






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>