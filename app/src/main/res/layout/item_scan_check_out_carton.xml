<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="item"
            type="com.wcs.vcc.api.checkouttrip.response.TripCarton"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_trip_delivery_trip_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/caldroid_holo_blue_dark"
            android:text="@{item.sHIP_TO_LOCATION}" />


        <TextView
            android:id="@+id/tv_item_trip_delivery_route_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@{String.valueOf(item.totalPlanCarton)}" />

        <TextView
            android:id="@+id/tv_item_trip_delivery_qty_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/caldroid_holo_blue_dark"
            android:text="@{String.valueOf(item.totalCartonDispatch)}">

        </TextView>


        <TextView
            android:id="@+id/tv_item_trip_delivery_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_right_bottom_dark"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/caldroid_light_red"
            android:text="@{item.status}" />

    </LinearLayout>
</layout>